{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["ES2019"],
		"module": "CommonJS",
		"allowJs": true,
		"outDir": "./dist",
		"declaration": true,
		"rootDir": "./src",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
        "resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*.ts", "routes/*"],
	"exclude": ["node_modules/"]
}
